<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ram.email_box"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/email"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ram.email_box.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ram.email_box.LoginActivity">
        </activity>
        <activity
            android:name="com.ram.email_box.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.ram.email_box.NewEmailActivity"
            android:label="@string/title_activity_new_mail" >
        </activity>
        <activity
            android:name="com.ram.email_box.ShowEmailListActivity"
            android:label="@string/title_activity_show_email_list" >
        </activity>
        <activity
            android:name="com.ram.email_box.ShowSingleEmailActivity"
            android:label="@string/title_activity_show_single_email" >
        </activity>
        <activity
            android:name="com.ram.email_box.ReplyEmailActivity"
            android:label="@string/title_activity_reply_email" >
        </activity>
    </application>

</manifest>